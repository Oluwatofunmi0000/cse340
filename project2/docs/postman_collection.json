{
  "info": {
    "name": "Project2 CRUD API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authors - Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"email\": \"jane@example.com\",\n  \"bio\": \"A demo author\"\n}"
        },
        "url": { "raw": "http://localhost:5000/api/authors", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","authors"] }
      }
    },
    {
      "name": "Books - Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Demo Book\",\n  \"isbn\": \"9781234567897\",\n  \"author\": \"{{authorId}}\",\n  \"publisher\": \"Demo Publisher\",\n  \"price\": 12.99\n}"
        },
        "url": { "raw": "http://localhost:5000/api/books", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","books"] }
      }
    },
    {
      "name": "Books - List",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:5000/api/books", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","books"] }
      }
    },
    {
      "name": "Authors - List",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:5000/api/authors", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","authors"] }
      }
    }
  ]
}
