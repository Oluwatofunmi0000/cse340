<h1>Add New Classification</h1>

<% if (typeof message !== 'undefined' && message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<% if (typeof errors !== 'undefined' && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %>
      <li><%= e.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post" novalidate>
  <label for="classification_name">Classification Name</label>
  <input
    type="text"
    id="classification_name"
    name="classification_name"
    required
    pattern="^[A-Za-z0-9]+$"
    title="No spaces or special characters"
    value="<%= classification_name || '' %>"
  />
  <p class="help">Allowed: letters and numbers only. No spaces or special characters.</p>

  <button type="submit">Add Classification</button>
</form>
